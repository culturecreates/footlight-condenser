<%= form_with(model: webpage, local: true) do |form| %>
  <% if webpage.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(webpage.errors.count, "error") %> prohibited this webpage from being saved:</h2>

      <ul>
      <% webpage.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :website_id %>
    <%= form.collection_select(:website_id, list_of_websites, :id, :seedurl,  {selected: list_of_websites.where(seedurl: params[:seedurl]).first&.id}) %>
  </div>

  <div class="field">
    <%= form.label :url %>
    <%= form.text_field :url, id: :webpage_url, size: 80%>
  </div>

  <div class="field">
    <%= form.label :language %>
    <%= form.text_field :language, id: :webpage_language %>
  </div>

  <div class="field">
    <%= form.label :jsonld_outputs %>
    <%= form.collection_select(:jsonld_output_id, @jsonld_outputs, :id, :name, {:prompt => 'Override JSON-LD Output'}) %>
  </div>

 

  <script>
    function clearJsonldOutputField() {
      document.getElementById('webpage_jsonld_output_id').value = '';
    }
  </script>

  <h2> Main Entity on webpage</h2>

  <div class="field">
    <%= form.label :rdfs_class_id %>
    <%= form.collection_select(:rdfs_class_id, @rdfs_classes, :id, :name, {:prompt => false}) %>
  </div>

  <div class="field">
    <%= form.label "URI of main entity" %>
    <%= form.text_field :rdf_uri, id: :webpage_rdf_uri, size: 80%>
  </div>


  <div class="field">
    <%= form.label :archive_date %>
    <%= form.datetime_select :archive_date,  id: :webpage_archive_date %>
  </div>

  <div class="actions">
    <%= form.submit %>
    <%= button_to 'Clear JSON-LD Output', '#', method: :get, onclick: "clearJsonldOutputField(); return false;" %>
  </div>
<% end %>
